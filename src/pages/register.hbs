---
stylesheets:
- ./styles/form.css
- ../components/styles/input.css
- ../components/styles/button.css
---
{{#extend "base"}}
{{#content "main"}}
<main>
    <div class="container form__container">
        <h2 class="form__header">Register</h2>
        <form class="form__register">
            <fieldset>
                {{> input type="text" name="login" placeholder="login" required=true}}
                {{> input type="text" name="email" placeholder="e-mail" required=true}}
                {{> input type="text" name="first_name" placeholder="first name" required=true}}
                {{> input type="text" name="second_name" placeholder="surname" required=true}}
                {{> input type="text" name="phone" placeholder="phone" required=true}}
                {{> input type="password" name="password" placeholder="password" required=true}}
                {{> input type="password" name="password_confirm" placeholder="confirm_password" required=true}}
            </fieldset>
            <div class="form__buttons">
                {{> button text="register"}}
                <a class="form__back-link" href="login.hbs">already have an account?</a>
            </div>
        </form>
    </div>
</main>
{{/content}}
{{/extend}}
